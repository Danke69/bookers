<head>

    <%= stylesheet_link_tag 'index.css' %>

</head>

<body>

  <div class="flash-destroy">
    <%= flash[:notice] %>
  </div>

  <h1>Books</h1>

  <div class="main">

    <table class="table">
      <thead>
        <tr>
          <th>title</th>
          <th>body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
          <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td class="show"><%= link_to 'show', book_path(book.id) %></td>
                <td class="edit"><%= link_to 'edit', edit_book_path(book.id) %></td>
                <td class="destroy"><%= link_to 'destroy', book_path(book.id), method: :delete %></td>
            </tr>
          <% end %>
      </tbody>
    </table>

  </div>

  <h1>New Book</h1>
  <% if @book.errors.any? %>
  <div class="error-codo">
    <%= @book.errors.count %>errors prohibited this book from being saved:

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
       </ul>
    <% end %>
  </div>

  <%= form_with model: @book do |f| %>
    <h5>Title</h5>
    <%= f.text_field :title %>

    <h5>Body</h5>
    <%= f.text_area :body %>


    <div class="botton">
      <%= f.submit 'create book' %>
    </div>


  <% end %>

</body>

